<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ff006f"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40dp"
            android:text="또왕" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.97">

            <android.support.v7.widget.RecyclerView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/stamp_page_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Stamp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/coupon_page_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Coupon"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_1"
                android:layout_margin="10dp" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="#ff006f"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="쿠폰바꾸기"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="#ff88ff"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="선물하기"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f0f0"
            android:clickable="false"
            android:layout_weight="1"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_button"
                android:layout_weight="1"
                android:singleLine="false"
                android:clickable="true"
                android:background="#f8f0f0"
                android:textSize="15dp" />
            <Button
                android:id="@+id/whole_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whole"
                android:layout_weight="1"
                android:clickable="true"
                android:background="#f8f0f0"
                android:textSize="15dp" />
            <Button
                android:id="@+id/event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event"
                android:layout_weight="1"
                android:clickable="true"
                android:background="#f8f0f0"
                android:textSize="15dp" />
            <Button
                android:id="@+id/setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                android:layout_weight="1"
                android:clickable="true"
                android:background="#f8f0f0"
                android:textSize="15dp" />

        </LinearLayout>

</LinearLayout>